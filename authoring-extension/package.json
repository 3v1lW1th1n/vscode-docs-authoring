{
  "name": "docs-markdown",
  "displayName": "docs-markdown",
  "description": "Docs Authoring Extension",
  "icon": "images/docs-logo-ms.png",
  "aiKey": "AIF-d9b70cd4-b9f9-4d70-929b-a071c400b217",
  "version": "0.0.1",
  "publisher": "Microsoft",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "generateMasterRedirectionFile",
        "title": "Docs Markdown Authoring: Generate master redirection file"
      },
      {
        "command": "markdownQuickPick",
        "title": "Docs Markdown Authoring",
        "icon": {
          "dark": "images/svg/markdown-light.svg",
          "light": "images/svg/markdown-dark.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "markdown.showPreview",
          "alt": "markdown.showPreviewToSide",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "markdownQuickPick",
          "alt": "markdownQuickPick",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Docs Authoring Extenstion Configuration",
      "properties": {
        "markdown.showToolbar": {
          "type": "boolean",
          "default": false,
          "description": "Show the legacy toolbar in the bottom status bar.",
          "scope": "window"
        }
      }
    },
    "keybindings": [
      {
        "command": "markdownQuickPick",
        "key": "Alt+M",
        "mac": "Alt+M",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      },
      {
        "command": "automaticList",
        "key": "enter",
        "mac": "enter",
        "when": "editorTextFocus && editorLangId == markdown && !suggestWidgetVisible"
      },
      {
        "command": "insertNestedList",
        "key": "tab",
        "mac": "tab",
        "when": "editorTextFocus && editorLangId == markdown && !suggestWidgetVisible"
      },
      {
        "command": "removeNestedList",
        "key": "backspace",
        "mac": "backspace",
        "when": "editorTextFocus && editorLangId == 'markdown'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "file-exists": "^5.0.1",
    "fs-exists-sync": "^0.1.0",
    "lodash.merge": "^4.6.0",
    "matcher": "^1.0.0",
    "node-dir": "^0.1.17",
    "octicons": "^4.4.0",
    "typescript-collections": "^1.2.3",
    "yamljs": "^0.3.0",
    "vscode-extension-telemetry": "^0.0.6"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/lodash.merge": "^4.6.3",
    "@types/mocha": "^2.2.32",
    "@types/node": "^7.0.0",
    "@types/yamljs": "^0.2.30",
    "chai": "^3.5.0",
    "mocha": "^2.3.3",
    "octicons": "^4.4.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "vscode": "^1.0.0"
  }
}